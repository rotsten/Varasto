--SQL> CREATE DATABASE Varastotietokanta WITH Masteruser

SQL > CREATE TABLE KAYTTAJA (
	Kayttajatunnus	VARCHAR 10 CONSTRAIN Kayttajatunnus PRIMARY KEY
	Salasana		VARCHAR2(30) NOT NULL CHECK (Salasana <> ' ')
	Etunimi		VARCHAR2(20) NOT NULL CHECK (Etunimi <> ' ')
	Sukunimi		VARCHAR2(30)
	Kayttooikeudet	BYTE
);

SQL > CREATE TABLE TUOTE (
	Tuote-ID		NUMBER 7 CONSTRAIN Tuote-ID PRIMARY KEY
	Tuotteen_nimi	VARCHAR2(30) NOT NULL CHECK (Tuotteen_nimi <> ' ')
	Kuvaus		VARCHAR2(150)
	Valmistaja		VARCHAR2(30)
	History-kuka-lisasi	VARCHAR(7) CONSTRAIN History-kuka-lisasi  DEFAULT (“Tuntematon”) FOREIGN KEY (KAYTTAJA) REFERENCES KAYTTAJA(kayttajatunnus)
	History-date		DATE
);

SQL > CREATE TABLE VARASTO (
	Tuote-ID		NUMBER 7 CONSTRAIN FOREIGN KEY (Tuote-ID) REFERENCES TUOTE(Tuote-ID) MATCH FULL ON DELETE delete MATCH FULL ON UPDATE update
	Lukumaara		INTEGER CONSTRAINT Lukumaara DEFAULT (0)
	History-kuka-inventoi	VARCHAR(7) CONSTRAIN History-kuka-inventoi  DEFAULT (“Tuntematon”) FOREIGN KEY (KAYTTAJA) REFERENCES KAYTTAJA(kayttajatunnus)
	History-date		DATE
);

